<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jtorres.fallsmeter.MainActivity"
    tools:deviceIds="wear"
    android:gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Conectando..."
        app:layout_box="all"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_start_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_selector_button_blue"
            android:layout_marginEnd="40dp"
            android:text="@string/home_start"/>

        <Button
            android:id="@+id/home_finish_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button_grey_disable"
            android:text="@string/home_end"
            android:clickable="false"/>

    </LinearLayout>


</LinearLayout>
